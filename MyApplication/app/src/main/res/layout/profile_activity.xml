<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#dedede"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mhissdev.com.myapplication.ProfileActivity">

    <!-- <RelativeLayout
        android:id="@+id/top-background"
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="120dp" /> -->

    <!-- Top banner -->
    <ImageView
        android:id="@+id/top-banner"
        android:src="@drawable/background"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:adjustViewBounds="true" />

    <!-- Main content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="88dp">

        <!-- Emojis -->
        <ImageView
            android:id="@+id/emojis"
            android:src="@drawable/emojis"
            android:layout_width="64dp"
            android:layout_height="64dp" />
        
        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="36dp"
            android:gravity="right"
            android:text="Mark Hiscock"
            android:textSize="32sp"
            android:textStyle="normal"/>

        <!-- Email -->
        <ImageView
            android:id="@+id/icon-email"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/title"
            android:src="@drawable/img_05"/>

        <TextView
            android:id="@+id/text-email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/icon-email"
            android:layout_below="@+id/title"
            android:textSize="18sp"
            android:text="mark@somecompany.com"/>

        <!-- site -->
        <ImageView
            android:id="@+id/icon-site"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/icon-email"
            android:layout_marginTop="20dp"
            android:src="@drawable/img_03"/>

        <TextView
            android:id="@+id/text-site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/icon-site"
            android:layout_below="@+id/icon-email"
            android:textSize="18sp"
            android:text="http://somesite.com"/>

        <!-- Some info -->
        <ImageView
            android:id="@+id/icon-info"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/icon-site"
            android:layout_marginTop="20dp"
            android:src="@drawable/img_04"/>

        <TextView
            android:id="@+id/text-info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/icon-site"
            android:layout_below="@+id/icon-site"
            android:textSize="18sp"
            android:text="mhiscock"/>

        <!-- Location -->
        <ImageView
            android:id="@+id/icon-location"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/icon-info"
            android:layout_marginTop="20dp"
            android:src="@drawable/img_01"/>

        <TextView
            android:id="@+id/text-location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/icon-site"
            android:layout_below="@+id/icon-info"
            android:textSize="18sp"
            android:text="Devizes, Wiltshire, UK."/>


    </RelativeLayout>


</RelativeLayout>
